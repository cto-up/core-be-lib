{
  "$id": "https://schemas.ory.sh/presets/kratos/identity.email.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-Mail",
          "minLength": 3,
          "maxLength": 320,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              },
              "code": {
                "identifier": true,
                "via": "email"
              }
            },
            "verification": {
              "via": "email"
            },
            "recovery": {
              "via": "email"
            }
          }
        },
        "name": {
          "type": "string",
          "title": "Full Name",
          "minLength": 1,
          "maxLength": 100
        }
      },
      "required": [
        "email"
      ],
      "additionalProperties": false
    },
    "metadata_public": {
      "type": "object",
      "properties": {
        "tenant_memberships": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "tenant_id": {
                "type": "string",
                "title": "Tenant ID"
              },
              "roles": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["CUSTOMER_ADMIN", "ADMIN", "USER"]
                },
                "title": "Tenant Roles"
              }
            },
            "required": ["tenant_id", "roles"]
          },
          "title": "Tenant Memberships",
          "description": "List of tenant memberships with associated roles for efficient middleware validation"
        },
        "global_roles": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["SUPER_ADMIN"]
          },
          "title": "Global Roles",
          "description": "Global system roles (SUPER_ADMIN only)"
        }
      }
    }
  }
}
